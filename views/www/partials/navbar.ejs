<header id="header" class="fixed-top">
    <div class="container d-flex align-items-center justify-content-center">
        <h1 class="logo mr-auto">
            <a href="/"><span>Com</span>pany</a>
        </h1>

        <nav class="nav-menu d-none d-lg-flex justify-content-center">
            <ul class="d-flex justify-content-center">
                <% menu.map((item)=> { %>
                    <li>
                        <a href="<%= item.url %>">
                            <%= item.name %>
                        </a>
                    </li>
                <% }) %>
            </ul>
        </nav>

        <!-- if we have user, show the user avatar with dropdown menu logout, if there's no user send login button -->
        <% if (user) { %>
            <div class="dropdown ml-4">
                <a
                    class="dropdown-toggle"
                    href="#"
                    role="button"
                    id="dropdownMenuLink"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                >
                    <img
                        src="<%= user.avatarUrl %>"
                        alt="<%= user.name %>"
                        class="img-fluid"
                        width="30"
                        style="border-radius: 50%"
                    />
                </a>

                <div
                    class="dropdown-menu"
                    aria-labelledby="dropdownMenuLink"
                >
                    <% if (["mod", "admin"].includes(user.role)) { %>
                        <a
                            class="dropdown-item"
                            href="/admin"
                            >Admin Panel</a
                        >
                    <% } %>
                
                    <a
                    class="dropdown-item"
                    href="/auth/signout"
                    >Logout</a
                    >
                </div>
            </div>
        <% } else { %>
            <a
                href="/auth/signin"
                class="btn btn-primary ml-4"
                style="border-radius: 50px"
                >Login</a
            >
        <% } %>
    </div>
</header>