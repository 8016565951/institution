<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= title %></title>
        <!-- link styleshit -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        />

        <link rel="stylesheet" href="/www/styles/signin.css" />
    </head>

    <body>
        <section class="h-100 h-custom gradient-custom-2">
            <div class="container py-5 h-100 login">
                <!-- a card for asking for verify your email -->
                <div
                    class="row d-flex justify-content-center align-items-center h-100"
                >
                    <div class="card" style="border-radius: 15px">
                        <div class="card-body p-0">
                            <div class="p-5">
                                <h3 class="fw-normal" style="color: #4835d4">
                                    Verify your email
                                </h3>

                                <p class="m-0">
                                    We have sent you an email to verify your
                                    email address. Please check your inbox and
                                    click on the link to verify your email.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
